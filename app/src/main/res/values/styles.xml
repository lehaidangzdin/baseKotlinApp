<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="h2_highlight_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>


    <style name="cta_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_cta_button</item>
    </style>

    <style name="button_style_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_button_normal</item>
    </style>


    <!--Style splash screen-->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground" tools:targetApi="s">@color/primaryLightColor
        </item>
        <item name="windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash_insert
        </item>
        <item name="windowSplashScreenIconBackgroundColor" tools:targetApi="s">
            @color/background_splash_color
        </item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="33">icon_preferred</item>
        <item name="postSplashScreenTheme">@style/Theme.Main</item>
    </style>

    <style name="Widget.BaseKotlin.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <!--    -->

    <style name="Black" parent="@style/Theme.AppCompat">
        <item name="actionAndroidIcon">@drawable/ic_android_black_24dp_dark</item>
    </style>


    <style name="Light" parent="@style/Theme.AppCompat.Light">
        <item name="actionAndroidIcon">@drawable/ic_android_black_24dp_light</item>
    </style>

</resources>